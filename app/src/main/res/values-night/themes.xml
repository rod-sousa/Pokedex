<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red2</item>
        <item name="colorPrimaryVariant">@color/dark_red2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background_top">
        <item name="android:background">@color/dark_mode1</item>
    </style>

    <style name="text_hint">
        <item name="android:textColorHint">#CBCBCB</item>
    </style>

    <style name="background_item">
        <item name="android:background">@color/dark_mode3</item>
    </style>

    <style name="background_recycler">
        <item name="android:background">@color/dark_mode2</item>
    </style>

    <style name="text_name">
        <item name="android:textColor">#CBCBCB</item>
    </style>

    <style name="text_button">
        <item name="android:textColor">#CBCBCB</item>
    </style>


</resources>