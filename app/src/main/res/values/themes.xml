<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red2</item>
        <item name="colorPrimaryVariant">@color/dark_red2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="background_top">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="background_recycler">
        <item name="android:background">@color/light_grey2</item>
    </style>

    <style name="background_item">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_hint">
        <item name="android:textColorHint">#757575</item>
    </style>

    <style name="text_name">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_button">
        <item name="android:textColor">@color/dark_red</item>
    </style>

</resources>